<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Accounts</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />

   <!-- App CSS  -->
  <link rel="stylesheet" href="views/css/index.css" type="text/css" />

  </head>
  <body>
    <h1 class="d-flex justify-content-center">All Accounts</h1>
    <div class="card text-center w-75 table-sizing">
      <div class="">
        <table
          class="table table-dark table-striped table-hover table-bordered"
        >
          <thead class="card-header">
            <tr>
              <th scope="col">Site</th>
              <th scope="col">URL</th>
              <th scope="col">Email</th>
              <th scope="col">Password</th>
              <th scope="col">Category</th>
              <th scope="col">Edit</th>
              <th scope="col">Delete</th>
            </tr>
          </thead>
          <% for(const account of accounts) { %>
          <tbody class="card-body">
            <tr>
              <td><%= account.site_name %></td>
              <td><%= account.site_url %></td>
              <td><%= account.email %></td>
              <td><%= account.password %></td>
              <td><%= account.category_id %></td>

              <td></td>
              <td></td>
            </tr>
          </tbody>

          <% } %>
        </table>
      </div>
    </div>
  </body>
</html>
