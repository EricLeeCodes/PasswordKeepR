<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Accounts</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />

    <!-- App CSS  -->
    <link rel="stylesheet" href="css/index.css" type="text/css" />
  </head>

  <body>
    <h1 class="d-flex justify-content-center">All Accounts</h1>
    <div class="container scrolling">
      <table
        class="table table-dark table-striped table-hover table-bordered text-center table-sizing table-responsive"
      >
        <thead class="">
          <tr>
            <th scope="col" class="col-2">Site</th>
            <th scope="col" class="col-3">URL</th>
            <th scope="col" class="col-2">Email</th>
            <th scope="col" class="col-2">Password</th>
            <th scope="col">Category</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
          </tr>
        </thead>
        <tbody class="vh-100">
          <% for(const account of accounts) { %>

          <tr>
            <td><%= account.site_name %></td>
            <td><%= account.site_url %></td>
            <td><%= account.email %></td>
            <td><%= account.password %></td>
            <td><%= account.category_id %></td>

            <td></td>
            <td></td>
          </tr>

          <% } %>
        </tbody>
      </table>
    </div>
  </body>
</html>
